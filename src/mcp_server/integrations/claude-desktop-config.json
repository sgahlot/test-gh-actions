{
  "mcpServers": {
    "ai-observability": {
      "command": "$OBS_BASE_DIR/.venv/bin/obs-mcp-server",
      "args": [
        "--local"
      ],
      "env": {
        "PROMETHEUS_URL": "http://localhost:9090",
        "LLAMA_STACK_URL": "http://localhost:8321/v1/openai/v1",
        "THANOS_TOKEN": ""
      },
      "autoApprove": [
        "list_models",
        "list_namespaces",
        "get_model_config",
        "analyze_vllm"
      ],
      "alwaysAllow": [
        "list_models",
        "list_namespaces",
        "get_model_config",
        "analyze_vllm"
      ],
      "disabled": false
    }
  }
}